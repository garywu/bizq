{
  "name": "bizq",
  "version": "0.1.0",
  "description": "AI-First Multi-Business Management Platform",
  "main": "web-interface.ts",
  "scripts": {
    "start": "tsx src/experimental/web-interface.ts",
    "demo": "tsx src/experimental/integrated-demo.ts",
    "marketplace": "tsx src/core/marketplace.ts",
    "dev": "tsx --watch src/experimental/web-interface.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "test": "tsx tests/test-*.ts",
    "test:watch": "tsx --watch tests/test-*.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.127",
    "@instantlyeasy/claude-code-sdk-ts": "^0.3.3",
    "@types/cors": "^2.8.19",
    "bull": "^4.11.5",
    "claude-code-js": "^0.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "litellm": "^0.12.0",
    "openai": "^4.24.0",
    "socket.io": "^4.6.1",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
